<p id="notice"><%= notice %></p>

<h3>Create your Bookmarks</h3>

<div class="form">
    <%= render 'form', bookmark: @bookmark %>
</div>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Categories</th>
      <th>Kinds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id = "bookmarks">
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.url %></td>
        <td>
            <% bookmark.categories.each do |c| %>
                <%= c %> <br>
            <% end %>
        </td>
        <td>
            <% bookmark.kinds.each do |k| %>
                <%= k %> <br>
            <% end %>
        </td>
        <td><%= link_to 'Show', bookmark_path(bookmark) %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

